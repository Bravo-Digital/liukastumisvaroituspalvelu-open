{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "dist/workers",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/index.ts", "src/scheduler.ts", "src/types/**/*.d.ts"],
  }
